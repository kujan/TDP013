extends layout
block content
    script(src='/js/validator.js')
    .container
        .row.text-center.pad-top
            .col-md-12
                h1 Kvitter Registration
            .row.pad-top
                .col-md-6.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
                    .panel.panel-default
                        .panel-heading
                            strong    Register form
                        .panel-body
                            form#registerForm.form-horizontal(method='post', action='/register')
                                .form-group
                                    label.col-lg-4.control-label Username
                                    .col-lg-7
                                        input#username.form-control(type='text', name='user')
                                .form-group
                                    label.col-lg-4.control-label Password
                                    .col-lg-7
                                        input#password.form-control(type='password', name='password')
                                .form-group
                                    label.col-lg-4.control-label Retype password
                                    .col-lg-7
                                        input#passwordconf.form-control(type='password', name='confirmPassword')

                                button#button.btn.btn-lg.btn-primary.btn-block(type='submit') Get Kvittering!
                                span#error
                                hr
                                | Already Registered?
                                br
                                a(href='/login') Login here
                            span#error

